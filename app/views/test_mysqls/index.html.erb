<%- model_class = TestMysql -%>
<div class="pagination-centered">
	 <%= will_paginate @test_mysqls%>
</div>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @test_mysqls.each do |test_mysql| %>
      <tr>
        <td><%= link_to test_mysql.id, test_mysql_path(test_mysql) %></td>
        <td><%= test_mysql.content %></td>
        <td><%=l test_mysql.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_test_mysql_path(test_mysql), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      test_mysql_path(test_mysql),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_test_mysql_path,
            :class => 'btn btn-primary' %>

<%= link_to "Insert into mysql",
            populate_test_mysqls_path,
            :class => 'btn btn-primary' %>


